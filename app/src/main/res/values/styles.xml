<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="challenger_mode_theme" parent="AppTheme">
        <item name="colorPrimary">@color/challenger_mode_primary_color</item>
        <item name="colorAccent">@color/challenger_mode_accent_color</item>
        <item name="colorPrimaryDark">@color/challenger_mode_accent_color</item>
    </style>

    <style name="tournament_mode_theme" parent="AppTheme">
        <item name="colorPrimary">@color/tournament_mode_primary_color</item>
        <item name="colorAccent">@color/tournament_mode_accent_color</item>
        <item name="colorPrimaryDark">@color/tournament_mode_accent_color</item>
    </style>

    <style name="login_screen_text">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ModeSelectionButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:background">@drawable/mode_selection_button_background</item>
    </style>

    <style name="ItemActiveChallengeButtonStyle">
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/challenger_mode_accent_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemActiveChallengeTextWithDrawableStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_6sdp</item>
        <item name="android:drawableTint">@color/colorPrimaryDark</item>
    </style>

    <style name="ProfileAwardsTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="ProfileSectionsTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:paddingBottom">@dimen/_16sdp</item>
    </style>

    <style name="ProfileScreenElementsStyle">
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
    </style>

</resources>
